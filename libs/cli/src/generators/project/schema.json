{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "Project",
  "title": "Project generator",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What directory would you like to use?"
    },
    "type": {
      "type": "string",
      "description": "Project type",
      "enum": ["api", "lib", "cli"],
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What type would you like to use?"
    }
  },
  "required": ["directory", "type"]
}
